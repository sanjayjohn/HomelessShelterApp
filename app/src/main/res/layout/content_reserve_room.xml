<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rob.shelterfinder.ReserveRoom"
    tools:showIn="@layout/activity_reserve_room">

    <EditText
        android:id="@+id/roomsNeeded"
        android:layout_width="381dp"
        android:layout_height="43dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/reserveRoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/roomsCancelled"
        android:layout_width="383dp"
        android:layout_height="39dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reserveRoom" />

    <Button
        android:id="@+id/reserveRoom"
        android:layout_width="379dp"
        android:layout_height="46dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="5dp"
        android:text="Reserve Room"
        app:layout_constraintBottom_toTopOf="@+id/roomsCancelled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomsNeeded" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="377dp"
        android:layout_height="52dp"
        android:layout_marginBottom="309dp"
        android:layout_marginEnd="7dp"
        android:text="Cancel Reservation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomsCancelled" />
</android.support.constraint.ConstraintLayout>
